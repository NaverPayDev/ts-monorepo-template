{
    "$schema": "https://turborepo.org/schema.json",
    "pipeline": {
        "local": {
            "dependsOn": ["^build:pkg"]
        },
        "build:pkg": {
            "dependsOn": ["^build:pkg"],
            "outputs": ["dist/**"]
        },
        "build": {
            "cache": false,
            "dependsOn": ["^build:pkg"],
            "outputs": ["dist/**", "next/**"]
        },
        "start": {},
        "clean": {
            "cache": false
        },
        "lint": {},
        "lint:fix": {},
        "prettier": {},
        "prettier:fix": {}
    }
}
